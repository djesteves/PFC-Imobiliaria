<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <welcome-file-list>
        <welcome-file> index.jsp </welcome-file>
    </welcome-file-list>
    
    <filter>
        <filter-name>AcessoAdmin</filter-name>
        <filter-class>filtro.AcessoAdmin</filter-class>
    </filter>
    
    <filter>
        <filter-name>Logado</filter-name>
        <filter-class>filtro.AcessoLogado</filter-class>
    </filter>
    
    <filter>
        <filter-name>AcessoFunc</filter-name>
        <filter-class>filtro.AcessoFunc</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>AcessoAdmin</filter-name>
        <url-pattern>/Admin/*</url-pattern>
        <url-pattern>/controle/UsuarioListar</url-pattern>
    </filter-mapping>
    
    <filter-mapping>
        <filter-name>AcessoFunc</filter-name>
        <url-pattern>/Funcionario/*</url-pattern>
        <url-pattern>/controle/AprovarImovel</url-pattern>
    </filter-mapping>
    
    <filter-mapping>
        <filter-name>Logado</filter-name>
        <url-pattern>/Usuario/GerenciarImoveis.jsp</url-pattern>
        <url-pattern>/Usuario/FormImovel.jsp</url-pattern>
        <url-pattern>/Usuario/AlterarSenhaUsuario.jsp</url-pattern>
    </filter-mapping>
    
</web-app>
